<BSModal DataId="deletePropertyModal" @ref="Modal" Size="Size.Small">
    <Content>
        <BSButton class="btn-close" style="background-color: unset;" @onclick="Modal.HideAsync"></BSButton>
        <div class="modal-status bg-danger"></div>
        <div class="modal-body text-center py-4">
          <Icon class="mb-2 text-danger icon-lg" Elements="@Icons.Alert_triangle" />
          <h3>Are you sure?</h3>
          <div class="text-muted">Do you really want to delete this property? This cannot be undone.</div>
        </div>
    </Content>
    <Footer Context="modal">
        <div class="w-100">
            <div class="row">
                <div class="col">
                    <BSButton class="w-100" Color="BSColor.Default" @onclick="Modal.HideAsync">Cancel</BSButton>
                </div>
                <div class="col">
                    <BSButton class="w-100" Color="BSColor.Danger" @onclick="Delete">Delete</BSButton>
                </div>
            </div>
          </div>
    </Footer>
</BSModal>